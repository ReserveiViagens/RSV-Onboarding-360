# Production Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration
DB_HOST=prod-db.rsv360.com
DB_PORT=5432
DB_USER=rsvuser
DB_PASSWORD=production_password_456
DB_NAME=rsv_ecosystem_prod

# Redis Configuration
REDIS_HOST=prod-redis.rsv360.com
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_password

# Application URLs
BASE_URL=https://rsv360.com
API_BASE_URL=https://rsv360.com/api
ECOSYSTEM_MASTER_URL=https://rsv360.com

# Service Ports
ECOSYSTEM_MASTER_PORT=3000
CRM_SYSTEM_PORT=3001
BOOKING_ENGINE_PORT=3002
FINANCIAL_SYSTEM_PORT=3003
PRODUCT_CATALOG_PORT=3004
MARKETING_AUTOMATION_PORT=3005
ANALYTICS_INTELLIGENCE_PORT=3006
ADMINISTRATION_PORT=3007
INVENTORY_MANAGEMENT_PORT=3008
PAYMENT_GATEWAY_PORT=3009
PUBLIC_FACING_PORT=3010

# Security
JWT_SECRET=production_jwt_secret_key_456
ENCRYPTION_KEY=production_encryption_key_456
SESSION_SECRET=production_session_secret_456

# External Services
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
EMAIL_SERVICE_URL=https://api.email-service.com
SMS_SERVICE_URL=https://api.sms-service.com

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=warn
METRICS_ENABLED=true

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/production/webhook/url
EMAIL_RECIPIENTS=production-team@rsv360.com

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_MARKETING_AUTOMATION=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_REPORTING=true

# Performance
CACHE_TTL=7200
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW=3600

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
