# Staging Environment Configuration
NODE_ENV=staging
ENVIRONMENT=staging

# Database Configuration
DB_HOST=staging-db.rsv360.com
DB_PORT=5432
DB_USER=rsvuser
DB_PASSWORD=staging_password_123
DB_NAME=rsv_ecosystem_staging

# Redis Configuration
REDIS_HOST=staging-redis.rsv360.com
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# Application URLs
BASE_URL=http://staging.rsv360.com
API_BASE_URL=http://staging.rsv360.com/api
ECOSYSTEM_MASTER_URL=http://staging.rsv360.com

# Service Ports
ECOSYSTEM_MASTER_PORT=3000
CRM_SYSTEM_PORT=3001
BOOKING_ENGINE_PORT=3002
FINANCIAL_SYSTEM_PORT=3003
PRODUCT_CATALOG_PORT=3004
MARKETING_AUTOMATION_PORT=3005
ANALYTICS_INTELLIGENCE_PORT=3006
ADMINISTRATION_PORT=3007
INVENTORY_MANAGEMENT_PORT=3008
PAYMENT_GATEWAY_PORT=3009
PUBLIC_FACING_PORT=3010

# Security
JWT_SECRET=staging_jwt_secret_key_123
ENCRYPTION_KEY=staging_encryption_key_123
SESSION_SECRET=staging_session_secret_123

# External Services
PAYMENT_GATEWAY_URL=https://sandbox.payment-gateway.com
EMAIL_SERVICE_URL=https://staging.email-service.com
SMS_SERVICE_URL=https://staging.sms-service.com

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=info
METRICS_ENABLED=true

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/staging/webhook/url
EMAIL_RECIPIENTS=staging-team@rsv360.com

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_MARKETING_AUTOMATION=true
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_ADVANCED_REPORTING=true

# Performance
CACHE_TTL=3600
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
