# Configurações de ambiente para testes
NODE_ENV=test

# Configurações do banco de dados de teste
DB_HOST=localhost
DB_PORT=5432
DB_USER=rsvuser
DB_PASSWORD=rsvpassword
DB_NAME=rsv_ecosystem_test

# Configurações do servidor de teste
TEST_SERVER_PORT=3001
TEST_SERVER_URL=http://localhost:3001

# Configurações de autenticação para testes
TEST_ADMIN_EMAIL=admin@rsv360.com
TEST_ADMIN_PASSWORD=admin123
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Configurações de API para testes
API_BASE_URL=http://localhost:3001/api
API_TIMEOUT=10000

# Configurações de performance para testes
PERFORMANCE_THRESHOLD_MS=3000
MEMORY_THRESHOLD_MB=100

# Configurações de logs para testes
LOG_LEVEL=error
ENABLE_TEST_LOGS=false

# Configurações de dados de teste
SEED_TEST_DATA=true
CLEANUP_AFTER_TESTS=true

# Configurações de Playwright
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2

# Configurações de cobertura de código
COVERAGE_THRESHOLD=80
COVERAGE_REPORTERS=text,lcov,html

# Configurações de paralelização
JEST_MAX_WORKERS=4
PLAYWRIGHT_WORKERS=2
