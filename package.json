{
  "name": "onion-rsv-360-playwright-tests",
  "version": "1.0.0",
  "description": "Testes E2E completos para Sistema Reservei Viagens com Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:dashboard": "playwright test dashboard-reservei-viagens.spec.ts",
    "test:hotels": "playwright test hotels-complete-crud.spec.ts",
    "test:customers": "playwright test customers-complete-crud.spec.ts",
    "test:navigation": "playwright test navigation-complete.spec.ts",
    "test:all": "playwright test --reporter=html",
    "show-report": "playwright show-report",
    "install-browsers": "playwright install --with-deps",
    "dev": "next dev -p 3001"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "reservei-viagens",
    "onion-rsv",
    "automation"
  ],
  "author": "Sistema Onion RSV 360",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "playwright": "^1.55.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
